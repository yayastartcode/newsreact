---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import AdSlot from '../components/AdSlot.astro';
import NewsTicker from '../components/NewsTicker.astro';
import { fetchApi } from '../lib/api';
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
  image?: string;
  type?: 'website' | 'article';
  publishedTime?: string;
  author?: string;
}

// Fetch settings
let settings: any = {};
try {
  settings = await fetchApi('/settings');
} catch (e) {}

const { 
  title, 
  description = settings.site_description || 'Portal berita terkini dan terpercaya', 
  image = '/images/og-default.jpg',
  type = 'website',
  publishedTime,
  author
} = Astro.props;

const siteTitle = settings.site_name || 'NewsReact';
const fullTitle = `${title} | ${siteTitle}`;
const canonicalUrl = new URL(Astro.url.pathname, Astro.site || 'http://localhost:4321');
---

<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="description" content={description} />
  
  <!-- Open Graph -->
  <meta property="og:title" content={fullTitle} />
  <meta property="og:description" content={description} />
  <meta property="og:image" content={image} />
  <meta property="og:url" content={canonicalUrl} />
  <meta property="og:type" content={type} />
  <meta property="og:site_name" content={siteTitle} />
  
  {type === 'article' && publishedTime && (
    <meta property="article:published_time" content={publishedTime} />
  )}
  {type === 'article' && author && (
    <meta property="article:author" content={author} />
  )}
  
  <!-- Twitter Card -->
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content={fullTitle} />
  <meta name="twitter:description" content={description} />
  <meta name="twitter:image" content={image} />
  
  <!-- Canonical -->
  <link rel="canonical" href={canonicalUrl} />
  
  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet" />
  
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <title>{fullTitle}</title>
</head>
<body>
  <Header />
  <NewsTicker />
  <AdSlot position="header" />
  
  <div class="main-wrapper">
    <main class="container py-4">
      <slot />
    </main>
  </div>
  
  <Footer />
  <AdSlot position="footer" />
</body>
</html>
