---
import { api, fetchApi } from '../lib/api';

let categories: any[] = [];
try {
  categories = await api.getCategories();
} catch (e) {
  console.error('Failed to fetch categories');
}

// Fetch settings
let settings: any = {};
try {
  settings = await fetchApi('/settings');
} catch (e) {}

// Fetch footer menu
let footerMenu: any[] = [];
try {
  footerMenu = await api.getMenuItems('footer');
} catch (e) {}

const currentYear = new Date().getFullYear();
const siteName = settings.site_name || 'NewsReact';
const siteDescription = settings.site_description || 'Portal berita terkini dan terpercaya. Menyajikan informasi akurat dan berimbang untuk Anda.';
const footerText = settings.footer_text || `Â© ${currentYear} ${siteName}. All rights reserved.`;

// Social links
const socialFacebook = settings.social_facebook || '#';
const socialTwitter = settings.social_twitter || '#';
const socialInstagram = settings.social_instagram || '#';
---

<footer class="footer">
  <div class="container">
    <div class="footer-grid">
      <div class="footer-brand">
        <a href="/" class="logo">
          <span class="logo-text">{siteName}</span>
        </a>
        <p class="footer-desc">{siteDescription}</p>
      </div>
      
      <div class="footer-links">
        <h4 class="footer-title">Kategori</h4>
        <ul class="footer-list">
          {categories.slice(0, 5).map((cat) => (
            <li><a href={`/kategori/${cat.slug}`}>{cat.name}</a></li>
          ))}
        </ul>
      </div>
      
      <div class="footer-links">
        <h4 class="footer-title">Tautan</h4>
        <ul class="footer-list">
          {footerMenu.length > 0 ? (
            footerMenu.map((item: any) => (
              <li><a href={item.computed_url} target={item.target || '_self'}>{item.title}</a></li>
            ))
          ) : (
            <>
              <li><a href="/tentang">Tentang Kami</a></li>
              <li><a href="/kontak">Kontak</a></li>
              <li><a href="/kebijakan-privasi">Kebijakan Privasi</a></li>
              <li><a href="/syarat-ketentuan">Syarat & Ketentuan</a></li>
            </>
          )}
        </ul>
      </div>
      
      <div class="footer-links">
        <h4 class="footer-title">Ikuti Kami</h4>
        <div class="social-links">
          <a href={socialFacebook} aria-label="Facebook" class="social-link" target="_blank" rel="noopener">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
              <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
            </svg>
          </a>
          <a href={socialTwitter} aria-label="Twitter" class="social-link" target="_blank" rel="noopener">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
              <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
            </svg>
          </a>
          <a href={socialInstagram} aria-label="Instagram" class="social-link" target="_blank" rel="noopener">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
              <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
            </svg>
          </a>
        </div>
      </div>
    </div>
    
    <div class="footer-bottom">
      <p>{footerText}</p>
    </div>
  </div>
</footer>

<style>
  .footer {
    background: var(--color-bg-dark);
    color: #e2e8f0;
    padding: 3rem 0 1.5rem;
    margin-top: 4rem;
  }
  
  .footer-grid {
    display: grid;
    grid-template-columns: 2fr 1fr 1fr 1fr;
    gap: 2rem;
  }
  
  @media (max-width: 768px) {
    .footer-grid {
      grid-template-columns: 1fr 1fr;
    }
  }
  
  @media (max-width: 480px) {
    .footer-grid {
      grid-template-columns: 1fr;
    }
  }
  
  .logo {
    font-size: 1.5rem;
    font-weight: 700;
    display: inline-flex;
    margin-bottom: 1rem;
  }
  
  .logo-text {
    color: #fff;
  }
  
  .logo-accent {
    color: var(--color-primary);
  }
  
  .footer-desc {
    color: #94a3b8;
    font-size: 0.875rem;
    line-height: 1.6;
  }
  
  .footer-title {
    font-size: 0.875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin-bottom: 1rem;
    color: #fff;
  }
  
  .footer-list {
    list-style: none;
  }
  
  .footer-list li {
    margin-bottom: 0.5rem;
  }
  
  .footer-list a {
    color: #94a3b8;
    font-size: 0.875rem;
    transition: color var(--transition-fast);
  }
  
  .footer-list a:hover {
    color: #fff;
  }
  
  .social-links {
    display: flex;
    gap: 0.75rem;
  }
  
  .social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 2.5rem;
    height: 2.5rem;
    background: rgba(255, 255, 255, 0.1);
    border-radius: var(--radius-full);
    color: #fff;
    transition: all var(--transition-fast);
  }
  
  .social-link:hover {
    background: var(--color-primary);
    transform: translateY(-2px);
  }
  
  .footer-bottom {
    margin-top: 2rem;
    padding-top: 1.5rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    text-align: center;
    color: #64748b;
    font-size: 0.875rem;
  }
</style>
