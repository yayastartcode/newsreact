---
import MainLayout from '../../layouts/MainLayout.astro';
import ArticleCard from '../../components/ArticleCard.astro';
import { api } from '../../lib/api';

const { path } = Astro.params;

if (!path) {
  return Astro.redirect('/404');
}

const parts = path.split('/');
const year = parts[0];
const month = parts[1];

let data: any = null;
let error = null;

try {
  data = await api.getArchives(year, month);
} catch (e) {
  error = 'Arsip tidak ditemukan.';
}

const monthNames = [
  'Januari', 'Februari', 'Maret', 'April', 'Mei', 'Juni',
  'Juli', 'Agustus', 'September', 'Oktober', 'November', 'Desember'
];

const getMonthName = (m: string) => monthNames[parseInt(m) - 1] || '';
---

{error ? (
  <MainLayout title="Arsip Tidak Ditemukan">
    <div class="error-container">
      <h1>404</h1>
      <p>{error}</p>
      <a href="/" class="btn btn-primary">Kembali ke Beranda</a>
    </div>
  </MainLayout>
) : (
  <MainLayout title={month ? `Arsip ${getMonthName(month)} ${year}` : `Arsip ${year}`}>
    <div class="archive-page">
      <header class="page-header">
        <span class="archive-label">Arsip</span>
        <h1 class="page-title">
          {month ? `${getMonthName(month)} ${year}` : year}
        </h1>
        <p class="article-count">{data.articles?.length || 0} artikel</p>
      </header>
      
      <div class="articles-grid">
        {data.articles?.map((article: any) => (
          <ArticleCard article={article} />
        ))}
      </div>
      
      {(!data.articles || data.articles.length === 0) && (
        <p class="no-articles">Tidak ada artikel untuk periode ini.</p>
      )}
    </div>
  </MainLayout>
)}

<style>
  .error-container {
    text-align: center;
    padding: 4rem 0;
  }
  
  .error-container h1 {
    font-size: 6rem;
    color: var(--color-primary);
  }
  
  .page-header {
    text-align: center;
    margin-bottom: 2rem;
    padding-bottom: 1.5rem;
    border-bottom: 1px solid var(--color-border);
  }
  
  .archive-label {
    font-size: 0.875rem;
    color: var(--color-text-light);
    text-transform: uppercase;
    letter-spacing: 1px;
  }
  
  .page-title {
    font-size: 2.5rem;
    margin: 0.5rem 0;
  }
  
  .article-count {
    font-size: 0.875rem;
    color: var(--color-text-light);
  }
  
  .articles-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.5rem;
  }
  
  @media (max-width: 1024px) {
    .articles-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  
  @media (max-width: 640px) {
    .articles-grid {
      grid-template-columns: 1fr;
    }
  }
  
  .no-articles {
    text-align: center;
    padding: 3rem;
    color: var(--color-text-light);
  }
</style>
